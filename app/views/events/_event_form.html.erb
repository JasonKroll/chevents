<%= render 'layouts/errors', object: @event %>
<%= form_for @event do |f| %>
  <div class="form-group row">
    <%= f.label :name, "Name", class: "col-sm-3" %>
    <%= f.text_field :name, class: "col-sm-6" %>
  </div>
  <div class="form-group row">
    <%= f.label :description, "Description", class: "col-sm-3" %>
    <%= f.text_area :description, lines: 12, class: "col-sm-6" %>
  </div>
  <%= f.submit "Save", :disable_with => 'Saving...' %>
<% end %>  
